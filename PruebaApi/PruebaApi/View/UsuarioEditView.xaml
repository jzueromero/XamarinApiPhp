<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PruebaApi.View.UsuarioEditView"
             xmlns:VM="clr-namespace:PruebaApi.ViewModel"
             >
    <ContentPage.BindingContext>
        <VM:UsuarioEditViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding Usuario.Usuario}"/>
            <Entry Text="{Binding Usuario.Password}"/>
            <Button Text="guardar" Command="{Binding GuardarCommand}"/>
            <Button Text="Borrar" Command="{Binding BorrarCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>